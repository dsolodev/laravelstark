{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "dsolodev/laravelstark",
    "type": "project",
    "description": "An personal and opinionated Laravel starter kit.",
    "keywords": [
        "laravel",
        "framework",
        "filament",
        "starter-kit"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "filament/filament": "^4.1.9",
        "laravel/framework": "^12.34.0",
        "laravel/tinker": "^2.10.1",
        "opcodesio/log-viewer": "^3.21",
        "owenvoke/blade-fontawesome": "^2.9.1"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.1.0",
        "fakerphp/faker": "^1.24.1",
        "larastan/larastan": "^3.7.2",
        "laravel/pail": "^1.2.3",
        "laravel/pint": "^1.25.1",
        "laravel/sail": "^1.46",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.2",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^4.1.2",
        "pestphp/pest-plugin-laravel": "^4.0",
        "rector/rector": "^2.2.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan clear",
            "@update:requirements"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "post-install-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan log-viewer:publish --ansi",
            "@php artisan icons:cache --ansi"
        ],
        "update:requirements": [
            "composer bump",
            "npx npm-check-updates -u"
        ],
        "lint": [
            "rector",
            "pint --parallel",
            "npm run lint"
        ],
        "test:lint": [
            "pint --parallel --test",
            "rector --dry-run",
            "peck",
            "npm run test:lint"
        ],
        "test:types": "phpstan",
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:type-coverage-json": "pest --type-coverage --type-coverage-json=coverage/type-coverage.json",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:type-coverage",
            "@test:type-coverage-json"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
